<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
        android:id="@+id/head_layout"
        layout="@layout/head_panel_layout"/>

    <LinearLayout
        android:id="@+id/jg_store"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/jg_store_img"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/jg_store_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="兰博基尼盖拉多"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/jg_man"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/jg_man_store_img"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/jg_man_brand_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="兰博基尼盖拉多"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:gravity="left|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jg_man_store_tv"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                tools:text="兰博基尼盖拉多"/>

            <TextView
                android:id="@+id/jg_man_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                tools:text="兰博基尼盖拉多"/>
        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/man_recl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>