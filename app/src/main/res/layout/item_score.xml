<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/item_rlt"
        android:layout_width="match_parent"
        android:layout_height="67.5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" >
        <LinearLayout
            android:id="@+id/icon_lly"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_iv"
                android:layout_width="70dp"
                android:layout_height="match_parent"/>

        </LinearLayout>
        <TextView
            android:id="@+id/produceDate"
            android:layout_toRightOf="@id/icon_lly"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="14sp"
            android:text="2014-09-14 08:12:43"/>
        <ImageView
            android:id="@+id/return_iv"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/score_return"
            />
        <TextView
            android:id="@+id/jfChange"
            android:layout_toLeftOf="@id/return_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/score_text_bg"
            android:text="+200,0"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/score_line"/>
</LinearLayout>