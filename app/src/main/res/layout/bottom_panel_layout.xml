<?xml version="1.0" encoding="utf-8"?>
<com.mxst.car.simsclient.layout.BottomControlPanel xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    android:gravity="center"
   >

    <com.mxst.car.simsclient.layout.ImageText
        android:id="@+id/btn_home"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
          />

    <com.mxst.car.simsclient.layout.ImageText
        android:id="@+id/btn_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_home"
        />

    <ImageView
        android:id="@+id/btn_logo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/btn_info"
        android:src="@drawable/btn_logo" />

    <com.mxst.car.simsclient.layout.ImageText
        android:id="@+id/btn_find"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_logo"
         />

    <com.mxst.car.simsclient.layout.ImageText
        android:id="@+id/btn_market"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
         />

</com.mxst.car.simsclient.layout.BottomControlPanel>